# Database
DATABASE_URL=postgresql://username:password@localhost:5432/alttextai
SHADOW_DATABASE_URL=postgresql://username:password@localhost:5432/alttextai_shadow

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Provider dashboard (internal usage analytics)
PROVIDER_USERNAME=provider
PROVIDER_PASSWORD=strong-password-change-me

# Usage cost & pricing configuration
DEFAULT_COST_PER_1K_TOKENS=0.0025
MODEL_COST_OVERRIDES={}
PLAN_FREE_MONTHLY=0
PLAN_PRO_MONTHLY=12.99
PLAN_AGENCY_MONTHLY=49.99
PLAN_CREDITS_PACK=9.99
ALLOW_FIRST_SYNC_WITHOUT_SIGNATURE=true

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_REVIEW_API_KEY=sk-your-review-api-key
OPENAI_REVIEW_MODEL=gpt-4o-mini

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Product/Price IDs (set after running setup script)
STRIPE_PRICE_PRO=price_pro_monthly_id
STRIPE_PRICE_AGENCY=price_agency_monthly_id
STRIPE_PRICE_CREDITS=price_credits_one_time_id
STRIPE_PRODUCT_PRO=prod_pro_id
STRIPE_PRODUCT_AGENCY=prod_agency_id
STRIPE_PRODUCT_CREDITS=prod_credits_id

# Application
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Email Service (for password reset)
# For production, configure one of:
# - SendGrid: SENDGRID_API_KEY=your_key
# - AWS SES: AWS_SES_REGION=us-east-1, AWS_SES_ACCESS_KEY=..., AWS_SES_SECRET_KEY=...
# - Resend: RESEND_API_KEY=re_xxx
# - Mailgun: MAILGUN_API_KEY=xxx, MAILGUN_DOMAIN=xxx

# Webhook
WEBHOOK_SECRET=your-webhook-secret-for-monthly-reset
