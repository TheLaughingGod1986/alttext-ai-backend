{
  "name": "alttext-ai-api",
  "version": "1.0.0",
  "description": "Proxy API for AltText AI WordPress plugin",
  "main": "fresh-stack/server.js",
  "scripts": {
    "start": "node fresh-stack/server.js",
    "dev": "nodemon fresh-stack/server.js",
    "test": "jest --runInBand --forceExit",
    "test:unit": "jest tests/unit --runInBand --forceExit",
    "test:integration": "jest tests/integration --runInBand --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --runInBand --coverage --ci",
    "smoke": "bash fresh-stack/tests/smoke.sh",
    "start:fresh": "node fresh-stack/server.js"
  },
  "keywords": [
    "alttext",
    "api",
    "openai",
    "wordpress"
  ],
  "author": "AltText AI",
  "license": "MIT",
  "dependencies": {
    "@react-email/components": "^1.0.1",
    "@react-email/render": "^2.0.0",
    "@supabase/supabase-js": "^2.84.0",
    "axios": "^1.6.2",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "resend": "^6.3.0",
    "stripe": "^19.1.0",
    "zod": "^4.1.13",
    "ioredis": "^5.4.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "react-email": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
